@page "/Admin/Tours/Edit/{id?}"
@model Windeck.Geschichtstour.Backend.Pages.Admin.Tours.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model.IsNew ? "Neue Tour anlegen" : "Tour bearbeiten";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <!-- Id mitgeben, damit bestehende Tour aktualisiert wird -->
    <input type="hidden" asp-for="Tour.Id" />


    <div class="mb-3">
        <label asp-for="Tour.Title" class="form-label"></label>
        <input asp-for="Tour.Title" class="form-control" />
        <span asp-validation-for="Tour.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Tour.Description" class="form-label"></label>
        <textarea asp-for="Tour.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Tour.Description" class="text-danger"></span>
    </div>

    <p class="text-muted">
        Die Zuordnung der Stationen (Stops) kann in einer späteren Ausbaustufe
        über eine eigene Oberfläche gepflegt werden.
    </p>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-lg me-1"></i>
        Speichern
    </button>
    <a asp-page="Index" class="btn btn-secondary">
        <i class="bi bi-x-lg me-1"></i>
        Abbrechen
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
