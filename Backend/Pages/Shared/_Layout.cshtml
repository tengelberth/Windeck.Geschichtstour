<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Geschichtstour Windeck</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- FavIcon setzen -->
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/tourismusverein-logo.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/tourismusverein-logo.png" />
</head>

<body>

    <!-- LANDING HEADER -->
    <header class="landing-header fixed-top">
        <nav class="navbar navbar-expand-lg navbar-dark landing-navbar">
            <div class="container">

                <!-- Brand / Logo -->
                <a class="navbar-brand d-flex align-items-center gap-2" href="#top">
                    <img src="~/images/appiconwhite.svg" class="landing-logo" alt="Digitale Geschichtstour Windeck Logo" />
                    <span class="fw-bold">Geschichtstour Windeck</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0" type="button"
                        data-bs-toggle="collapse" data-bs-target="#landingNav"
                        aria-controls="landingNav" aria-expanded="false"
                        aria-label="Navigation öffnen">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav -->
                <div class="collapse navbar-collapse" id="landingNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-1 mt-3 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link landing-navlink" href="#info">Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link landing-navlink" href="#funktion">So funktioniert’s</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link landing-navlink" href="#code">Code</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link landing-navlink" href="#bachelor">Bachelorarbeit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link landing-navlink" href="#download">Download</a>
                        </li>

                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-sm btn-primary rounded-pill px-3 landing-admin-btn" href="/Admin" target="_blank">
                                <i class="bi bi-shield-lock me-1"></i> Admin
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="landing-footer">
        <div class="container py-4">
            <div class="row gy-3 align-items-center">
                <div class="col-md-6 text-center text-md-start small text-muted">
                    <div class="footer-left">
                        <div class="footer-copy">
                            © @DateTime.Now.Year Tourismus Windecker Ländchen e.V.
                        </div>

                        <div class="footer-links">
                            <a href="#"
                               class="footer-link"
                               data-bs-toggle="modal"
                               data-bs-target="#impressumModal">
                                Impressum
                            </a>

                            <span class="footer-sep">|</span>

                            <a href="#"
                               class="footer-link"
                               data-bs-toggle="modal"
                               data-bs-target="#kontaktModal">
                                Kontakt
                            </a>

                            <span class="footer-sep">|</span>

                            <a class="footer-link" href="/swagger" target="_blank" rel="noopener">
                                API (Swagger)
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 text-center text-md-end small text-muted">
                    Technische Umsetzung: Tobias Engelberth
                </div>
            </div>
        </div>
    </footer>

    <!-- ===================== Impressum Modal ===================== -->
    <div class="modal fade" id="impressumModal" tabindex="-1" aria-labelledby="impressumModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg landing-modal-dialog">
            <div class="modal-content landing-modal-content">
                <div class="modal-header landing-modal-header">
                    <h5 class="modal-title" id="impressumModalLabel">Impressum</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
                </div>

                <div class="modal-body landing-modal-header">
                    <p class="mb-2"><strong>Angaben gemäß § 5 DDG</strong></p>
                    <p class="mb-3">
                        <strong>Tourismus Windecker Ländchen e.V.</strong><br />
                        Rathausstraße 12<br />
                        51570 Windeck<br />
                        Deutschland<br />
                        <span class="d-inline-block mt-2">Vertreten durch: Frau Martina Schneider</span>
                    </p>

                    <p class="mb-2"><strong>Kontakt (Betreiber)</strong></p>
                    <p class="mb-3">
                        Telefon: <a href="tel:+4922929562023">+49 2292 9562023</a><br />
                        Telefax: <a href="tel:+4922929562025">+49 2292 9562025</a><br />
                        E-Mail: <a href="mailto:tourismus@gemeinde-windeck.de">tourismus@gemeinde-windeck.de</a>
                    </p>

                    <hr class="my-4" />

                    <p class="mb-2"><strong>Technische Umsetzung</strong></p>
                    <p class="mb-3">
                        Tobias Engelberth<br />
                        E-Mail: <a href="mailto:tobias.engelberth@gmail.com">tobias.engelberth@gmail.com</a>
                    </p>

                    <p class="small text-muted mb-0">
                        Hinweis: Die Urheberrechte an der Software/technischen Umsetzung verbleiben beim Entwickler. Dem Betreiber wird ein einfaches Nutzungsrecht eingeräumt. Für Inhalte und Betrieb ist der Betreiber verantwortlich.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- ===================== Kontakt Modal ===================== -->
    <div class="modal fade" id="kontaktModal" tabindex="-1" aria-labelledby="kontaktModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg landing-modal-dialog">
            <div class="modal-content landing-modal-content">
                <div class="modal-header landing-modal-header">
                    <h5 class="modal-title" id="kontaktModalLabel">Kontakt aufnehmen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
                </div>

                <div class="modal-body landing-modal-header">
                    <p class="text-muted small mb-3">
                        Sie können uns direkt per E-Mail kontaktieren:
                    </p>

                    <div class="d-flex flex-wrap gap-2">
                        <a class="btn btn-primary"
                           href="mailto:tourismus@gemeinde-windeck.de?subject=Anfrage%20Geschichtstour%20Windeck&body=Hallo%20Tourismus%20Windecker%20L%C3%A4ndchen%2C%0A%0A">
                            E-Mail an Tourismus Windeck
                        </a>

                        <a class="btn btn-outline-primary"
                           href="mailto:tobias.engelberth@gmail.com?subject=Technisches%20Feedback%20Geschichtstour&body=Hallo%20Herr%20Engelberth%2C%0A%0A">
                            E-Mail an Tobias Engelberth
                        </a>
                    </div>

                    <hr class="my-4" />

                    <p class="mb-2"><strong>Tourismus Windecker Ländchen e.V.</strong></p>
                    <p class="mb-0">
                        Rathausstraße 12, 51570 Windeck<br />
                        Telefon: <a href="tel:+4922929562023">+49 2292 9562023</a><br />
                        Telefax: <a href="tel:+4922929562025">+49 2292 9562025</a><br />
                        E-Mail: <a href="mailto:tourismus@gemeinde-windeck.de">tourismus@gemeinde-windeck.de</a>
                    </p>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Header Shadow + Mobile Menu Auto-Close -->
    <script>
        (function () {
            // Header bekommt Shadow beim Scroll
            const header = document.querySelector('.landing-header');
            const onScroll = () => {
                if (window.scrollY > 10) header.classList.add('is-scrolled');
                else header.classList.remove('is-scrolled');
            };
            window.addEventListener('scroll', onScroll, { passive: true });
            onScroll();

            // Mobile Menü nach Klick schließen (nur auf # Links)
            document.addEventListener('click', (e) => {
                const a = e.target.closest('a[href^="#"]');
                if (!a) return;

                const navCollapse = document.querySelector('#landingNav');
                if (navCollapse && navCollapse.classList.contains("show")) {
                    bootstrap.Collapse.getOrCreateInstance(navCollapse).hide();
                }
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
