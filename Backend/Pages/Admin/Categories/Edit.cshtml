@* Zweck: Formularseite zum Erstellen oder Bearbeiten von Datenobjekten. *@

@page "/Admin/Categories/Edit/{id?}"
@model Windeck.Geschichtstour.Backend.Pages.Admin.Categories.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model.IsNew ? "Neue Kategorie anlegen" : "Kategorie bearbeiten";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <!-- Id als Hidden Feld, damit bei Bearbeitung kein neues Objekt entsteht -->
    <input type="hidden" asp-for="Category.Id" />

    <div class="mb-3">
        <label asp-for="Category.Name" class="form-label"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category.Description" class="form-label"></label>
        <textarea asp-for="Category.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Category.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-lg me-1"></i>
        Speichern
    </button>
    <a asp-page="Index" class="btn btn-secondary">
        <i class="bi bi-x-lg me-1"></i>
        Abbrechen
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
